<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/book_img"
                android:layout_width="112dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/img_camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Upload Cover"
                android:textColor="@color/dot_dark_screen1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_edit_text"
                android:hint="Title book"
                android:padding="15dp"
                android:textColor="@color/dot_dark_screen1"
                android:textColorHint="@color/dot_dark_screen1" />

            <EditText
                android:id="@+id/txtAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_edit_text"
                android:hint="Author"
                android:padding="15dp"
                android:textColor="@color/dot_dark_screen1"
                android:textColorHint="@color/dot_dark_screen1" />

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/dot_light_screen3"
                android:gravity="center"
                android:hint="Select Category"
                android:padding="10dp"
                android:textColor="@color/md_black_1000"
                android:textColorHint="@color/md_black_1000"
                android:textSize="14.5sp"
                android:textStyle="bold"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="8dp"
                app:spinner_divider_color="@color/light_pink"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/md_green_500"
                app:spinner_popup_elevation="14dp" />

            <EditText

                android:id="@+id/txtBookDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/background_edit_text"
                android:hint="Desciption"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="10"
                android:padding="15dp"
                android:textColor="@color/dot_dark_screen1"
                android:textColorHint="@color/dot_dark_screen1" />
            <TextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_black_1000"
                android:textSize="20dp"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_uploadPdfFile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_signup_button"
                    android:backgroundTint="#768A87"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="UPLOAD FILE"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_publish"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_signup_button"
                    android:backgroundTint="#768A87"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:text="PULISH"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>